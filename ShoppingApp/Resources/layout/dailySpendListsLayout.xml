<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/size10">

    <ImageView
        android:id="@+id/imageViewDailySpendImage"
        android:layout_width="@dimen/size40"
        android:layout_height="@dimen/size40"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/textViewDailySpentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/scale14"
        android:textColor="@color/colorBlack"
        app:layout_constraintLeft_toRightOf="@+id/imageViewDailySpendImage"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/size10"/>
    <TextView
        android:id="@+id/textViewDailySpentMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/scale14"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        app:layout_constraintLeft_toRightOf="@+id/imageViewDailySpendImage"
        app:layout_constraintTop_toBottomOf="@+id/textViewDailySpentTitle"
        android:layout_marginLeft="@dimen/size10"/>

      <TextView
        android:id="@+id/textViewDailySpentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/scale14"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDailySpentTitle"
        android:layout_marginRight="@dimen/size10"/>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="@dimen/size100"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        
        android:id="@+id/cardViewWishLists"
        android:layout_width="@dimen/size90"
        android:layout_height="@dimen/size90"
        app:cardCornerRadius="@dimen/size20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    <ImageView
        android:id="@+id/imageViewItemImage"
        android:layout_width="@dimen/size50"
        android:layout_height="@dimen/size50"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size5"/>

    <TextView
        android:id="@+id/textViewItemName"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size40"
        android:textStyle="bold"
        android:textSize="@dimen/scale12"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size50"
        android:textColor="@color/colorWhite"/>
    </androidx.cardview.widget.CardView>
    

</androidx.constraintlayout.widget.ConstraintLayout>

